              <RegistryValue Root="HKLM"
                             Key="SOFTWARE\[Manufacturer]\[ProductName]\FirewallRule"
                             Type="string" Value="1"
                             KeyPath="yes" />
              <fire:FirewallException Id="Firewall_BinDiffLocalTCP2000"
                                      Name="[ProductName]"
                                      Port="2000" Protocol="tcp"
                                      Scope="localSubnet" />
            </Component>
