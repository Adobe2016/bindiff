<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension"
     xmlns:fire="http://schemas.microsoft.com/wix/FirewallExtension">
  <!-- Never change the UpgradeCode after release -->
  <Product Id="*"
           UpgradeCode="DFAC8553-6E4B-48b9-8D9D-8CC97D67F726"
           Name="BinDiff"
           Language="1033"
           Version="6.0.0"
           Manufacturer="Google LLC">
    <Package Id="*"
             Keywords="Installer"
             Platform="x64"
             Comments="This Installer database contains the logic and data required to install BinDiff."
             Description="BinDiff Installation package"
             InstallerVersion="500"
             InstallScope="perMachine"
             Compressed="yes" />
    <Media Id="1" Cabinet="bindiff.cab" EmbedCab="yes" />

    <!-- Enable Windows Installer major upgrade functionality so users can
         seamlessly install a new version of the product and have the old
         version automatically uninstalled. See also: https://goo.gl/TfKVUa
      -->
    <Upgrade Id="DFAC8553-6E4B-48b9-8D9D-8CC97D67F726">
      <UpgradeVersion Minimum="6.0.0" IncludeMinimum="no"
                      OnlyDetect="yes"
                      Property="NEWERVERSIONDETECTED" />
      <UpgradeVersion Minimum="3.0.0" IncludeMinimum="yes"
                      Maximum="6.0.0" IncludeMaximum="no"
                      IgnoreRemoveFailure="yes"
                      Property="OLDERVERSIONBEINGUPGRADED" />
    </Upgrade>

    <!-- Prevent users from installing if a newer version of this product
         is already installed. This is part of the Windows Installer major
         upgrade functionality.
      -->
    <CustomAction Id="CA_BlockOlderVersionInstall"
                  Error="A later version of [ProductName] is already installed." />

    <CustomAction Id="CA_SetDefaultIdaDirectory"
                  Property="IDADIRECTORY" Value="[ProgramFilesFolder]IDA\" />

    <!-- Launch conditions -->
    <Condition Message="[ProductName] can only be installed on Microsoft Windows 8.1 or later (x64).">
      VersionNT64 >= 603
    </Condition>
    <Condition Message="You must have Administrative rights on this machine to install [ProductName].">
      Privileged
    </Condition>

    <!-- Properties -->
    <Property Id="ARPPRODUCTICON" Value="Icons_BinDiff.ico" />
    <Property Id="ARPHELPLINK" Value="https://www.zynamics.com/bindiff.htm" />
    <Property Id="ARPURLINFOABOUT" Value="https://www.zynamics.com/" />
    <PropertyRef Id="WIX_ACCOUNT_LOCALSYSTEM" />
    <PropertyRef Id="WIX_ACCOUNT_USERS" />

    <Property Id="IDADIRECTORY">
      <RegistrySearch Id="HexRaysIdaRegistry740" Type="raw" Win64="yes"
                      Root="HKLM"
                      Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\IDA Pro_7.4_is1"
                      Name="InstallLocation" />
      <RegistrySearch Id="HexRaysIdaRegistry730" Type="raw" Win64="yes"
                      Root="HKLM"
                      Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\IDA Pro_7.3_is1"
                      Name="InstallLocation" />
      <RegistrySearch Id="HexRaysIdaRegistry720" Type="raw" Win64="yes"
                      Root="HKLM"
                      Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\IDA Pro_7.2_is1"
                      Name="InstallLocation" />

      <RegistrySearch Id="HexRaysIdaRegistry710" Type="raw" Win64="yes"
                      Root="HKLM"
                      Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\IDA Pro_7.1_is1"
                      Name="InstallLocation" />
    </Property>

    <Property Id="JDKVERSION">
      <RegistrySearch Id="JavaSoftJDKRegistry" Type="raw" Win64="yes"
                      Root="HKLM"
                      Key="SOFTWARE\JavaSoft\JDK"
                      Name="CurrentVersion" />
      <RegistrySearch Id="JavaSoftJRERegistry" Type="raw" Win64="yes"
                      Root="HKLM"
                      Key="SOFTWARE\JavaSoft\Java Runtime Environment"
                      Name="CurrentVersion" />
    </Property>

    <!-- Note (b/140218119): This custom action deletes an existing empty
         directory or junction. Possible conditions for %ProgramData%\BinDiff:
           - Does not exist - does nothing
           - Is directory junction or symlink - gets deleted
           - Is empty directory - gets deleted
           - Is non-empty dir - does nothing
         The action will execute with elevated privileges.
      -->
    <CustomAction Id="RemoveCommonAppData"
                  Directory="CommonAppDataFolder"
                  ExeCommand="[SystemFolder]cmd.exe /c rmdir /q &quot;[CommonAppDataFolder]BinDiff&quot;"
                  Execute="deferred"
                  Impersonate="no"
                  Return="ignore" />

    <!-- Installation sequence for administrative installations -->
    <InstallExecuteSequence>
      <Custom Action="CA_BlockOlderVersionInstall" After="FindRelatedProducts">
        NEWERVERSIONDETECTED
      </Custom>
      <Custom Action="CA_SetDefaultIdaDirectory" After="FindRelatedProducts">
        IDADIRECTORY = ""
      </Custom>

      <!-- Remove existing product early to allow upgrade of old machine
           config files.
        -->
      <RemoveExistingProducts After="InstallInitialize" />

      <Custom Action="RemoveCommonAppData" After="RemoveExistingProducts"/>

      <LaunchConditions After="AppSearch"/>
    </InstallExecuteSequence>

    <!-- Default installation sequence -->
    <InstallUISequence>
      <Custom Action="CA_BlockOlderVersionInstall" After="FindRelatedProducts">
        NEWERVERSIONDETECTED
      </Custom>
      <Custom Action="CA_SetDefaultIdaDirectory" After="FindRelatedProducts">
        IDADIRECTORY = ""
      </Custom>

      <LaunchConditions After="AppSearch"/>
    </InstallUISequence>

